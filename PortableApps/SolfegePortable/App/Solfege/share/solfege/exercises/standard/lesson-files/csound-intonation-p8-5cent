header {
    lesson_id = "csound-intonation-p8-5cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 5
        lesson_heading = _("Just interval: %s") % _("Perfect Octave") + " (2:1)"
        filldir = vertic
}

