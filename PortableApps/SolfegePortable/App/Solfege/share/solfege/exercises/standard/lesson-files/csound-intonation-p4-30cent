header {
    lesson_id = "csound-intonation-p4-30cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 30
        lesson_heading = _("Just interval: %s") % _("Perfect Fourth") + " (4:3)"
        filldir = vertic
}

