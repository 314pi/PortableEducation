header {
    lesson_id = "csound-intonation-maj9-30cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 30
        lesson_heading = _("Just interval: %s") % _("Major Ninth") + " (1+9:8)"
        filldir = vertic
}

