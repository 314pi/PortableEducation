header {
    lesson_id = "csound-intonation-maj7-5cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 5
        lesson_heading = _("Just interval: %s") % _("Major Seventh") + " (15:8)"
        filldir = vertic
}

