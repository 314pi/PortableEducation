header {
    lesson_id = "csound-intonation-min7-6cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 6
        lesson_heading = _("Just interval: %s") % _("Minor Seventh") + " (16:9)"
        filldir = vertic
}

