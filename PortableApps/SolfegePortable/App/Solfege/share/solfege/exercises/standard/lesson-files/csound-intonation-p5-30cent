header {
    lesson_id = "csound-intonation-p5-30cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 30
        lesson_heading = _("Just interval: %s") % _("Perfect Fifth") + " (3:2)"
        filldir = vertic
}

