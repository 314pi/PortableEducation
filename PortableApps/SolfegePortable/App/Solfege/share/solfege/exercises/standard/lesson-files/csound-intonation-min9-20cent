header {
    lesson_id = "csound-intonation-min9-20cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 20
        lesson_heading = _("Just interval: %s") % _("Minor Ninth") + " (1+16:15)"
        filldir = vertic
}

