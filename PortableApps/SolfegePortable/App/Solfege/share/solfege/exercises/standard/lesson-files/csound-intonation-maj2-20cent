header {
    lesson_id = "csound-intonation-maj2-20cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 20
        lesson_heading = _("Just interval: %s") % _("Major Second") + " (9:8)"
        filldir = vertic
}

