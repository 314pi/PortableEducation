header {
    lesson_id = "csound-intonation-min7-30cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 30
        lesson_heading = _("Just interval: %s") % _("Minor Seventh") + " (16:9)"
        filldir = vertic
}

