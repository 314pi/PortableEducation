header {
    lesson_id = "csound-intonation-maj3-15cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 15
        lesson_heading = _("Just interval: %s") % _("Major Third") + " (5:4)"
        filldir = vertic
}

