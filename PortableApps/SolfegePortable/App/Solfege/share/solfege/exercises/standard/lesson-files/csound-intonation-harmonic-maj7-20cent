header {
    lesson_id = "csound-intonation-harmonic-maj7-20cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 20
        lesson_heading = _("Just interval: %s") % _("Major Seventh") + " (15:8)"
        filldir = vertic
}

question {
 name = _i("intonation|flat")
 set=0
 csound(load("share/sinus.orc"), """
   f1 0 4096 10 1 1.25 0.95 0.8 0.6 0.4 0.2 
   i1 0 1 220.000000
   i1 0 1 407.762033
 """)
}

