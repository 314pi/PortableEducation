header {
    lesson_id = "csound-intonation-harmonic-maj6-30cent"
        module = idbyname
        help = "idbyname-intonation"
        title = _("Is the interval flat, in tune or sharp? %s cent wrong") % 30
        lesson_heading = _("Just interval: %s") % _("Major Sixth") + " (5:3)"
        filldir = vertic
}

